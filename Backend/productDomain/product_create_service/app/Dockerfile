FROM python:3.13

# Instala las librer√≠as necesarias para pyodbc
RUN apt-get update && apt-get install -y \
    unixodbc \
    unixodbc-dev \
    gcc \
    g++ \
    gnupg \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY . .

RUN pip install --no-cache-dir -r requirements.txt

EXPOSE 3015

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "3015"]
